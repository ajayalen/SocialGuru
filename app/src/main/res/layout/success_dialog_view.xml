<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/main_container"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp20"
        android:background="@drawable/round_corner_dialog"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/success_dialog_image"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:src="@drawable/successfull_popup_icon"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp25"/>
    <TextView
        android:id="@+id/success_dialog_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_dark"
        android:padding="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp20"

        />
        <Button
            android:id="@+id/dialog_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/btn_ok"

            android:background="@drawable/round_corner_bottom_dialog"/>
        </LinearLayout>
</LinearLayout>