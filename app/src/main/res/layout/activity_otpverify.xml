<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verification_bg"
    android:orientation="vertical"
    android:id="@+id/main_container"
    tools:context="com.socialnetwork.activities.OTPVerifyActivity"
    tools:ignore="Overdraw">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp30"
        android:text="@string/enter_code_label"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/otp_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/passcode_number_circle_checked"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/otp_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/passcode_number_circle_checked"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/otp_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/passcode_number_circle_checked"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/otp_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/passcode_number_circle_checked"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp30"
        android:gravity="center"
        android:text="@string/sms_msg"
        android:textColor="@color/color_white_opaque"
        android:textSize="@dimen/text_size_16sp" />

    <TextView
        android:id="@+id/verify_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_corner_btn"
        android:text="@string/verify"
        android:textAppearance="@style/TextAppearance.Lato.Bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />

    <TextView
        android:id="@+id/resend_otp_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/resend_confirmation"
        android:padding="@dimen/dp20"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
